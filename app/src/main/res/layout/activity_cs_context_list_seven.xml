<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.luke_imagevideo_send.http.views.Header
        android:id="@+id/header"
        style="@style/Header"
        app:header_title="直探头检测的质量分级">
    </com.example.luke_imagevideo_send.http.views.Header>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="60dp"
                        android:text="工件厚度" />

                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="60dp"
                        android:text="质量等级" />
                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="60dp"
                        android:text="缺陷当量平底孔直径或因缺陷引起底波降低后幅度" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="60dp"
                        android:text="≤80" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="60dp"
                                android:text="I" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="60dp"
                                android:text="≤Ø3" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:orientation="vertical">
                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="60dp"
                                android:text="II" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="60dp"
                                android:text=">Ø3" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="60dp"
                        android:text=">80~200" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="60dp"
                                android:text="I" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="60dp"
                                android:text="≤Ø6" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:orientation="vertical">
                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="60dp"
                                android:text="II" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="60dp"
                                android:text=">Ø6" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="60dp"
                        android:text=">200~300" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="60dp"
                                android:text="I" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="60dp"
                                android:text="≤Ø10" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:orientation="vertical">
                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="60dp"
                                android:text="II" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="60dp"
                                android:text=">Ø10" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="60dp"
                        android:text=">300" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="60dp"
                                android:text="I" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="60dp"
                                android:text="≤Ø13" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:orientation="vertical">
                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="60dp"
                                android:text="II" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="60dp"
                                android:text=">Ø13" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="60dp"
                        android:text=">600" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="60dp"
                                android:text="I" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="60dp"
                                android:text="≥5%" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:orientation="vertical">
                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="60dp"
                                android:text="II" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="60dp"
                                android:text="&lt;5%" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@color/white"
                android:layout_marginTop="2dp"
                android:paddingLeft="20dp"
                android:layout_marginBottom="20dp"
                android:text="注:工作厚度主要指承压方向上的尺寸：对于筒形或环形锻件，工件厚度为筒体厚度；对于饼形或类似锻件，工件厚度为其最小厚度."
                android:gravity="center|left"
                android:textColor="@color/black"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>