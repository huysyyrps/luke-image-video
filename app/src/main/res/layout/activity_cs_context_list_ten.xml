<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.luke_imagevideo_send.http.views.Header
        android:id="@+id/header"
        style="@style/Header"
        app:header_title="压力管道环向或纵向对接接头超声检测质量分级">
    </com.example.luke_imagevideo_send.http.views.Header>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="60dp"
                        android:text="焊接接头等级" />

                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="90dp"
                        android:text="I" />

                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="90dp"
                        android:text="II" />

                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="135dp"
                        android:text="III" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="25dp"
                        android:text="焊接接头内部缺陷" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/ContextTextView"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:text="反射波幅所在区域" />

                        <TextView
                            style="@style/ContextTextView"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="1.5"
                            android:text="允许的单个缺陷指示长度/mm" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="44dp"
                                android:text="I" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="44dp"
                                android:text="II" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="44dp"
                                android:text="I" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="44dp"
                                android:text="II" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="44dp"
                                android:text="I" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="44dp"
                                android:text="II" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="44dp"
                                android:text="III" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="44dp"
                                android:text="≤40" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="44dp"
                                android:text="≤t/3,最小可为8,最大为30" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="44dp"
                                android:text="≤60" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="44dp"
                                android:text="≤2t/3,最小可为10,最大为40" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="44dp"
                                android:text="超过II级者" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="44dp"
                                android:text="所有缺陷" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="44dp"
                                android:text="超过II级者" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="25dp"
                        android:text="环向焊接接头单面焊根部为焊透缺陷" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/ContextTextView"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:text="允许的指示长度/mm" />

                        <TextView
                            style="@style/ContextTextView"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="1"
                            android:text="允许的累计长度/mm" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="90dp"
                                android:text="≤t/3,最小可为8" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="90dp"
                                android:text="≤2t/3,最小可为10" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="135dp"
                                android:text="超过II级者" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="90dp"
                                android:text="长度小于或等于焊缝周长的10%,切小于30" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="90dp"
                                android:text="长度小于或等于焊缝周长的15%,切小于40" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="135dp"
                                android:text="超过II级者" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:gravity="center|left"
                android:text="注1：在10mm环向焊接接头范围内,同时存在条状缺陷和未焊透时,应评为III级\n注2：当允许的缺陷累计长度小于该级别允许的单个缺陷指示长度时，以允许的单个缺陷指示长度为准\n注3：对接接头两侧母材厚度不同时,工件厚度取薄板侧厚度值。"
                android:textColor="@color/black" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>