<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.luke_imagevideo_send.http.views.Header
        android:id="@+id/header"
        style="@style/Header"
        app:header_title="奥氏体不锈钢对接接头超声检测质量分级">
    </com.example.luke_imagevideo_send.http.views.Header>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="60dp"
                        android:text="等级" />

                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="90dp"
                        android:text="I" />

                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="90dp"
                        android:text="II" />

                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="120dp"
                        android:text="III" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="工件厚度t/mm" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="90dp"
                                android:text="10~80" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="90dp"
                                android:text="10~80" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="120dp"
                                android:text="10~80" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1.2"
                    android:orientation="vertical">
                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="反射波幅所在区域" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="44dp"
                                android:text="I" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="44dp"
                                android:text="II" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="44dp"
                                android:text="I" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="44dp"
                                android:text="II" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="39dp"
                                android:text="II" />
                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="39dp"
                                android:text="III" />
                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="39dp"
                                android:text="I" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1.2"
                    android:orientation="vertical">
                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="允许的单个缺陷指示长度/mm" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="44dp"
                                android:text="≤40" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="44dp"
                                android:text="L≤t/3,最小可为10" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="44dp"
                                android:text="≤60" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="44dp"
                                android:text="L≤2t/3,最小可为12,最大不超过40" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="39dp"
                                android:text="超过II级者" />
                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="39dp"
                                android:text="所有缺陷(任何缺陷指示长度)" />
                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="39dp"
                                android:text="超过II级者" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>