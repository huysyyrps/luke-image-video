<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.luke_imagevideo_send.http.views.Header
        android:id="@+id/header"
        style="@style/Header"
        app:header_title="铝和铝合金制及钛制承压设备对接接头质量分级">
    </com.example.luke_imagevideo_send.http.views.Header>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="60dp"
                        android:text="等级" />

                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="125dp"
                        android:text="I" />

                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="125dp"
                        android:text="II" />

                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="125dp"
                        android:text="III" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="工件厚度/t" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="30dp"
                                android:text="8~40" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="30dp"
                                android:text="&gt;40~80" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="30dp"
                                android:text="8~40" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="30dp"
                                android:text="&gt;40~80" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="30dp"
                                android:text="8~40" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="30dp"
                                android:text="&gt;40~80" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="30dp"
                                android:text="8~40" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="30dp"
                                android:text="&gt;40~80" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="125dp"
                                android:text="8~80" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1.2"
                    android:orientation="vertical">
                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="反射波幅所在区域" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="62dp"
                                android:text="I" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="62dp"
                                android:text="II" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="62dp"
                                android:text="I" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="62dp"
                                android:text="II" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="41dp"
                                android:text="II" />
                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="41dp"
                                android:text="III" />
                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="41dp"
                                android:text="I" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1.6"
                    android:orientation="vertical">
                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="允许的单个缺陷指示长度" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="30dp"
                                android:text="≤20" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="30dp"
                                android:text="≤40" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="30dp"
                                android:text="≤10" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="30dp"
                                android:text="≤4t,最大不超过20" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="30dp"
                                android:text="≤30" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="30dp"
                                android:text="≤60" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="30dp"
                                android:text="≤15" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="30dp"
                                android:text="≤t/3,最大不超过25" />

                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="41dp"
                                android:text="超过II级者" />
                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="41dp"
                                android:text="所有缺陷" />
                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="41dp"
                                android:text="超过II级者" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>