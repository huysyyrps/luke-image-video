<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.luke_imagevideo_send.http.views.Header
        android:id="@+id/header"
        style="@style/Header"
        app:header_title="钢、镍、铜制承压设备管子及压力管道外径D0≤100mm时不加垫板单面焊未焊透的分级">
    </com.example.luke_imagevideo_send.http.views.Header>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="60dp"
                        android:text="级别" />

                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="40dp"
                        android:text="I" />

                    <TextView
                        style="@style/ContextTextView"
                        android:text="II" />

                    <TextView
                        style="@style/ContextTextView"
                        android:text="III" />

                    <TextView
                        style="@style/ContextTextView"
                        android:text="IV" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="60dp"
                            android:layout_marginLeft="1dp"
                            android:orientation="vertical">
                            <TextView
                                style="@style/ContextTextView"
                                android:layout_height="30dp"
                                android:layout_width="match_parent"
                                android:text="单个未焊透最大长度" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="29dp"
                                android:orientation="horizontal">
                                <TextView
                                    style="@style/ContextTextView"
                                    android:layout_height="30dp"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:text="与壁厚的比" />
                                <TextView
                                    style="@style/ContextTextView"
                                    android:layout_height="30dp"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="1dp"
                                    android:text="最大值" />
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            style="@style/ContextTextView"
                            android:layout_height="60dp"
                            android:layout_width="0dp"
                            android:layout_weight="1.3"
                            android:layout_marginLeft="1dp"
                            android:text="未焊透总长度与焊缝总长度的比" />
                    </LinearLayout>
                    <TextView
                        style="@style/ContextTextView"
                        android:layout_marginLeft="1dp"
                        android:layout_height="40dp"
                        android:layout_width="match_parent"
                        android:text="不允许" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:layout_weight="1.5"
                                    android:orientation="vertical">
                                    <TextView
                                        style="@style/ContextTextView"
                                        android:layout_width="match_parent"
                                        android:layout_height="60dp"
                                        android:text="≤10%" />
                                    <TextView
                                        style="@style/ContextTextView"
                                        android:layout_height="60dp"
                                        android:text="≤15%" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:layout_weight="1.5"
                                    android:orientation="vertical">
                                    <TextView
                                        style="@style/ContextTextView"
                                        android:layout_width="match_parent"
                                        android:layout_height="60dp"
                                        android:text="≤1.0" />
                                    <TextView
                                        style="@style/ContextTextView"
                                        android:layout_height="60dp"
                                        android:text="≤1.5" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.3"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:layout_weight="1.5"
                                    android:orientation="vertical">
                                    <TextView
                                        style="@style/ContextTextView"
                                        android:layout_width="match_parent"
                                        android:layout_height="60dp"
                                        android:text="≤10%" />

                                    <TextView
                                        style="@style/ContextTextView"
                                        android:layout_height="60dp"
                                        android:text="≤15%" />

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        style="@style/ContextTextView"
                        android:layout_marginLeft="1dp"
                        android:layout_height="60dp"
                        android:layout_width="match_parent"
                        android:text="大于III级" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:layout_marginTop="2dp"
                android:text="注：对断续未焊透,以为焊透本身的长度累加计算总长度"
                android:gravity="center"
                android:textColor="@color/black"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>