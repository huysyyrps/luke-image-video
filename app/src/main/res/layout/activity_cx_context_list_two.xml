<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.luke_imagevideo_send.http.views.Header
        android:id="@+id/header"
        style="@style/Header"
        app:header_title="钢、镍、铜制承压设备各级别熔化焊焊接接头允许的条形缺陷长度">
    </com.example.luke_imagevideo_send.http.views.Header>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="60dp"
                        android:text="级别" />

                    <TextView
                        style="@style/ContextTextView"
                        android:layout_height="40dp"
                        android:text="I" />

                    <TextView
                        style="@style/ContextTextView"
                        android:text="II" />

                    <TextView
                        style="@style/ContextTextView"
                        android:text="III" />

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/ContextTextView"
                            android:layout_height="60dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="单个条形缺陷最大长度" />
                        <TextView
                            style="@style/ContextTextView"
                            android:layout_height="60dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="1dp"
                            android:text="一组条形缺陷累计最大长度" />
                    </LinearLayout>
                    <TextView
                        style="@style/ContextTextView"
                        android:layout_marginLeft="1dp"
                        android:layout_height="40dp"
                        android:layout_width="match_parent"
                        android:text="不允许" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:layout_weight="1.5"
                                    android:orientation="vertical">
                                    <TextView
                                        style="@style/ContextTextView"
                                        android:layout_width="match_parent"
                                        android:layout_height="60dp"
                                        android:text="≤T/3(最小可为4)且≤20" />
                                    <TextView
                                        style="@style/ContextTextView"
                                        android:layout_height="60dp"
                                        android:text="≤2T/3(最小可为6)且≤30" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:layout_weight="1.5"
                                    android:orientation="vertical">
                                    <TextView
                                        style="@style/ContextTextView"
                                        android:layout_width="match_parent"
                                        android:layout_height="60dp"
                                        android:text="在长度为12T的任意选定条形缺陷评定区内，相邻缺陷间距不超过6L的任意一组条形缺陷的累计长度应不超过T,但最小可为4" />

                                    <TextView
                                        style="@style/ContextTextView"
                                        android:layout_height="60dp"
                                        android:text="在长度为12T的任意选定条形缺陷评定区内，相邻缺陷间距不超过3L的任意一组条形缺陷的累计长度应不超过T,但最小可为6" />

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                android:text="注：当母材公称厚度不同时，取较薄板的厚度"
                android:gravity="center"
                android:textColor="@color/black"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>