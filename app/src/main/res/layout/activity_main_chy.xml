<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.luke_imagevideo_send.cehouyi.MainCHYActivity">

    <com.example.luke_imagevideo_send.http.views.Header
        android:id="@+id/header"
        style="@style/Header"
        app:header_title="测厚仪">
    </com.example.luke_imagevideo_send.http.views.Header>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvData"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="180dp"
                android:text="512"
                android:textSize="60dp"
                android:background="@color/white"
                android:gravity="center"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/ivBluetooth"
                        android:layout_width="65dp"
                        android:layout_height="45dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:src="@drawable/ic_bluetooth_off"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="声速:"
                            android:textColor="@color/black" />
                        <TextView
                            android:id="@+id/tvSS"
                            style="@style/TextView"
                            android:gravity="left|center"
                            android:text="5920m/s" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/textViewSMZT"
                            android:layout_width="60dp"
                            android:layout_height="45dp"
                            android:text="扫描状态:"
                            android:gravity="left|center"
                            android:textColor="@color/color_bg_selected"/>
                        <TextView
                            android:id="@+id/tvSMZT"
                            style="@style/TextView"
                            android:gravity="left|center"
                            android:textColor="@color/color_bg_selected"
                            android:text="SCAN" />
                    </LinearLayout>
                </LinearLayout>
                <View style="@style/Line"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:layout_width="65dp"
                        android:layout_height="45dp">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="35dp"
                            android:background="@drawable/ic_electric"
                            android:layout_gravity="center"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/ivElectric"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50%"
                            android:textSize="14dp"
                            android:textColor="#d4237a"
                            android:layout_gravity="center"
                            android:gravity="center"/>
                    </FrameLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="45dp"
                            android:text="时间:"
                            android:gravity="center"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/tvTime"
                            style="@style/TextView"
                            android:gravity="left|center"
                            android:text="11:29:56"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="45dp"
                            android:text="测量单位:"
                            android:gravity="left|center"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/tvUnit"
                            style="@style/TextView"
                            android:text="mm"
                            android:gravity="left|center"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View style="@style/Line"/>

            <!--按钮去-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb1"
                        style="@style/RadionButton"
                        android:text="校准"
                        android:textColor="@color/black" />

                    <View style="@style/VLine" />

                    <RadioButton
                        android:id="@+id/rb2"
                        style="@style/RadionButton"
                        android:text="扫描" />

                    <View style="@style/VLine" />

                    <RadioButton
                        android:id="@+id/rb3"
                        style="@style/RadionButton"
                        android:text="调校" />
                </LinearLayout>
                <View style="@style/Line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb4"
                        style="@style/RadionButton"
                        android:text="菜单" />

                    <View style="@style/VLine" />

                    <RadioButton
                        android:id="@+id/rb5"
                        style="@style/RadionButton"
                        android:text="开机" />
                    <View style="@style/VLine" />

                    <RadioButton
                        android:id="@+id/rb6"
                        style="@style/RadionButton"
                        android:text="保存" />
                </LinearLayout>
                <View style="@style/Line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb7"
                        style="@style/RadionButton"
                        android:text="毫米" />
                    <View style="@style/VLine" />

                    <RadioButton
                        android:id="@+id/rb8"
                        style="@style/RadionButton"
                        android:text="蓝牙" />
                    <View style="@style/VLine" />
                    <RadioButton
                        style="@style/RadionButton"
                        android:text="蓝牙"
                        android:visibility="invisible"/>
                    <View style="@style/VLine" />


                </LinearLayout>
                <View style="@style/Line" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#40404040"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:orientation="vertical"
                android:layout_alignParentBottom="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:layout_alignTop="@+id/llNumberPicker">
                    <TextView
                        android:id="@+id/tvCancle"
                        style="@style/NumberPicker"
                        android:layout_height="match_parent"
                        android:text="取消"
                        android:gravity="center"
                        android:textColor="@color/red"
                        android:background="@color/shouye"/>
                    <TextView
                        style="@style/NumberPicker"
                        android:layout_height="match_parent"
                        android:background="@color/shouye"/>
                    <TextView
                        style="@style/NumberPicker"
                        android:layout_height="match_parent"
                        android:background="@color/shouye"/>
                    <TextView
                        android:id="@+id/tvSure"
                        style="@style/NumberPicker"
                        android:layout_height="match_parent"
                        android:text="确定"
                        android:gravity="center"
                        android:background="@color/shouye"
                        android:textColor="@color/color_bg_selected"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llNumberPicker"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:orientation="horizontal"
                    android:background="@drawable/linelayout_radion">
                    <NumberPicker
                        android:id="@+id/onePicker"
                        style="@style/NumberPicker"/>
                    <NumberPicker
                        android:id="@+id/tenPicker"
                        style="@style/NumberPicker"/>
                    <NumberPicker
                        android:id="@+id/hundredPicker"
                        style="@style/NumberPicker"/>
                    <NumberPicker
                        android:id="@+id/thousandPicker"
                        style="@style/NumberPicker"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>