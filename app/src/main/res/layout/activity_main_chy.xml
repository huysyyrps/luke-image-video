<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.luke_imagevideo_send.http.views.Header
        android:id="@+id/header"
        style="@style/Header"
        app:header_is_right_tv_visiable="true"
        app:header_title="测厚仪"
        app:header_title_right="刷新"></com.example.luke_imagevideo_send.http.views.Header>

    <include layout="@layout/dialog_bluetooth_list" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight="1.4"
                        android:background="@drawable/linelayout_color_bigradion"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.4"
                            android:gravity="center|left"
                            android:paddingLeft="10dp"
                            android:text="材料声速:"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tvSS"
                            style="@style/TextView"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="5920"
                            android:textColor="@color/text_green" />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_triangle" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1.4"
                        android:background="@drawable/linelayout_color_bigradion"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.4"
                            android:gravity="center|left"
                            android:paddingLeft="10dp"
                            android:text="蜂鸣状态:"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tvFMZT"
                            style="@style/TextView"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/text_green" />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_triangle" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight="1.4"
                        android:background="@drawable/linelayout_color_bigradion"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.4"
                            android:gravity="center|left"
                            android:paddingLeft="10dp"
                            android:text="测量单位:"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tvUnit"
                            style="@style/TextView"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="mm"
                            android:textColor="@color/text_green" />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_triangle" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1.4"
                        android:background="@drawable/linelayout_color_bigradion"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.4"
                            android:gravity="center|left"
                            android:paddingLeft="10dp"
                            android:text="耦合状态:"
                            android:textColor="@color/white" />

                        <com.jiangdg.singalviewlib.SignalView
                            android:id="@+id/signaView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="20dp"
                            android:paddingRight="20dp"
                            custom:rectBorderColor="@color/color_bg_selected1"
                            custom:rectBorderWidth="2"
                            custom:signalCount="7"
                            custom:signalHighColor="@color/blue"
                            custom:signalLowColor="@color/red"
                            custom:signalMiddleColor="@color/green"
                            custom:signalRectInterval="4"
                            custom:signalTypeTextColor="@color/black"
                            custom:signalTypeTextSize="6sp" />
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:visibility="invisible"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_triangle" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight="1.4"
                        android:background="@drawable/linelayout_color_bigradion"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.4"
                            android:gravity="center|left"
                            android:paddingLeft="10dp"
                            android:text="阈值上限:"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tvFTop"
                            style="@style/TextView"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="0.0"
                            android:textColor="@color/text_green" />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_triangle" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1.4"
                        android:background="@drawable/linelayout_color_bigradion"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.4"
                            android:gravity="center|left"
                            android:paddingLeft="10dp"
                            android:text="阈值下限:"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tvFBot"
                            style="@style/TextView"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="0.0"
                            android:textColor="@color/text_green" />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_triangle" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight="1.4"
                        android:background="@drawable/linelayout_color_bigradion"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_weight="1.4"
                            android:background="@drawable/linelayout_color_bigradion"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.4"
                                android:gravity="center|left"
                                android:paddingLeft="10dp"
                                android:text="扫描状态:"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/tvSM"
                                style="@style/TextView"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="CLOSS"
                                android:textColor="@color/text_green" />
                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:visibility="invisible"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/ic_triangle" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1.4"
                        android:background="@drawable/linelayout_color_bigradion"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/btnBack"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:text="恢复出厂"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvData"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:minHeight="180dp"
                android:text="0.00"
                android:textColor="@color/text_green"
                android:textSize="60dp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#40404040"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignTop="@+id/llNumberPicker"
                    android:background="@color/shouye"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCancle"
                        style="@style/NumberPicker"
                        android:layout_height="match_parent"
                        android:background="@color/shouye"
                        android:gravity="center"
                        android:text="取消"
                        android:textColor="@color/red" />

                    <TextView
                        style="@style/NumberPicker"
                        android:layout_height="match_parent"
                        android:background="@color/shouye" />

                    <TextView
                        style="@style/NumberPicker"
                        android:layout_height="match_parent"
                        android:background="@color/shouye" />

                    <TextView
                        android:id="@+id/tvSure"
                        style="@style/NumberPicker"
                        android:layout_height="match_parent"
                        android:background="@color/shouye"
                        android:gravity="center"
                        android:text="确定"
                        android:textColor="@color/color_bg_selected" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llNumberPicker"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@drawable/linelayout_radion"
                    android:orientation="horizontal">

                    <NumberPicker
                        android:id="@+id/onePicker"
                        style="@style/NumberPicker" />

                    <NumberPicker
                        android:id="@+id/tenPicker"
                        style="@style/NumberPicker" />

                    <NumberPicker
                        android:id="@+id/hundredPicker"
                        style="@style/NumberPicker" />

                    <NumberPicker
                        android:id="@+id/thousandPicker"
                        style="@style/NumberPicker" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>