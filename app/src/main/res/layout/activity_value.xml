<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".cehouyi.activity.ValueActivity">

    <com.example.luke_imagevideo_send.http.views.Header
        android:id="@+id/header"
        style="@style/Header"
        app:header_title="@string/setting_value"/>

    <LinearLayout
        android:id="@+id/llSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginBottom="2dp">
        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="组名"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp"/>
        <View style="@style/VLine"/>
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        style="@style/HourLine"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="2dp">
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black"
                android:background="@color/bantransparent"/>
            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/black"
                android:background="@color/bantransparent"
                android:layout_marginTop="1dp"/>
            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/black"
                android:background="@color/bantransparent"
                android:layout_marginTop="1dp"/>
            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/black"
                android:background="@color/bantransparent"
                android:layout_marginTop="1dp"/>
            <TextView
                android:id="@+id/tv5"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/black"
                android:background="@color/bantransparent"
                android:layout_marginTop="1dp"/>
            <TextView
                android:id="@+id/tv6"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/black"
                android:background="@color/bantransparent"
                android:layout_marginTop="1dp"/>
            <TextView
                android:id="@+id/tv7"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/black"
                android:background="@color/bantransparent"
                android:layout_marginTop="1dp"/>
            <TextView
                android:id="@+id/tv8"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/black"
                android:background="@color/bantransparent"
                android:layout_marginTop="1dp"/>
            <TextView
                android:id="@+id/tv9"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/black"
                android:background="@color/bantransparent"
                android:layout_marginTop="1dp"/>
            <TextView
                android:id="@+id/tv10"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="10"
                android:textColor="@color/black"
                android:background="@color/bantransparent"
                android:layout_marginTop="1dp"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>