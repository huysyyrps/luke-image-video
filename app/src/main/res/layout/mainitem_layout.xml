<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="left|bottom"
        android:background="@drawable/circle">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:background="@drawable/circle"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnTop"
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/ic_top_bg" />

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnLeft"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/ic_left_bg" />

                <Button
                    android:id="@+id/btnLight"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circle_color"
                    android:gravity="center"
                    android:text="设置"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnRight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/ic_right_bg" />
            </LinearLayout>

            <Button
                android:id="@+id/btnBotton"
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/ic_botton_bg" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llItem"
        android:visibility="gone"
        android:layout_width="600dp"
        android:layout_height="55dp"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="92dp"
        android:layout_marginBottom="73dp"
        android:background="@drawable/item_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tcCH"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="101dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="磁化"
            android:textSize="16dp" />

        <View style="@style/VLine" />

        <TextView
            android:id="@+id/tvSDJia"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="速度+"
            android:textSize="16dp" />

        <View style="@style/VLine" />

        <TextView
            android:id="@+id/tvSDJian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="速度-"
            android:textSize="16dp" />

        <View style="@style/VLine" />

        <TextView
            android:id="@+id/tvCE"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="磁轭"
            android:textSize="16dp" />

        <View style="@style/VLine" />

        <TextView
            android:id="@+id/tvDG"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="灯光"
            android:textSize="16dp" />

        <View style="@style/VLine" />

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="100dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/back" />
    </LinearLayout>


</FrameLayout>
